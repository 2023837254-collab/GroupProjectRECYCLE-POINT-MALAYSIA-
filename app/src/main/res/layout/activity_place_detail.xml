<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#4CAF50">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="@android:color/transparent"
                android:layout_margin="16dp"
                android:contentDescription="Back"
                android:onClick="goBack" />

            <!-- Place Title -->
            <TextView
                android:id="@+id/textViewPlaceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recycling Center"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingHorizontal="20dp" />

        </RelativeLayout>

        <!-- Main Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Place Image -->
                <ImageView
                    android:id="@+id/imageViewPlace"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="#E0E0E0"
                    android:src="@drawable/sel1"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="Place Image" />

                <!-- Place Name -->
                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place Name"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="12dp" />

                <!-- Details Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FAFAFA"
                    android:padding="12dp"
                    android:clipToPadding="true">

                    <!-- Address Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp">

                        <!-- Location Icon (Emoji) -->
                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="ðŸ“"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <!-- Address Text -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/textViewAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No address available"
                                android:textSize="14sp"
                                android:textColor="#212121"
                                android:lineSpacingExtra="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Contact Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp">

                        <!-- Phone Icon (Emoji) -->
                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="ðŸ“ž"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <!-- Contact Text -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/textViewContact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not available"
                                android:textSize="14sp"
                                android:textColor="#212121" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Rating Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp">

                        <!-- Star Icon (Emoji) -->
                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="â­"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <!-- Rating Text -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rating"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/textViewRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not available"
                                android:textSize="14sp"
                                android:textColor="#212121" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Coordinates Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <!-- Map Icon (Emoji) -->
                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="ðŸŒ"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <!-- Coordinates Text -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coordinates"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/textViewCoordinates"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0, 0"
                                android:textSize="14sp"
                                android:textColor="#212121" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="16dp">

            <!-- Open in Maps Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <Button
                    android:id="@+id/btnOpenLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4CAF50"
                    android:onClick="openLocationOnMap"
                    android:text="ðŸ“ OPEN IN MAPS"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="0dp" />

            </androidx.cardview.widget.CardView>

            <!-- Write a Review Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <Button
                    android:id="@+id/btnAddReview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FF9800"
                    android:onClick="openReviewActivity"
                    android:text="âœï¸ WRITE A REVIEW"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="0dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Footer Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>

</ScrollView>