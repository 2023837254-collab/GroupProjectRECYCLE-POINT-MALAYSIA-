<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœï¸ Write a Review"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp" />

    <!-- Place Name Display -->
    <TextView
        android:id="@+id/textViewPlaceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review for: [Place Name]"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#666666"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Image Preview -->
    <ImageView
        android:id="@+id/imageViewPreview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="#E0E0E0"
        android:scaleType="centerCrop"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        android:contentDescription="Preview image" />

    <!-- Camera Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnTakePhoto"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="ðŸ“· Take Photo"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="#4CAF50"
            android:layout_marginEnd="8dp"
            android:padding="0dp" />

        <Button
            android:id="@+id/btnSelectPhoto"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="ðŸ“ Choose Gallery"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="#2196F3"
            android:padding="0dp" />

    </LinearLayout>

    <!-- Review Input Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Review"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextReview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Share your experience..."
        android:gravity="top"
        android:inputType="textMultiLine"
        android:padding="16dp"
        android:background="#F5F5F5"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"
        android:maxLines="5"
        android:scrollbars="vertical" />

    <!-- Rating Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Rating"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:rating="0"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:progressTint="#FFC107"
        android:progressBackgroundTint="#E0E0E0" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="âœ… SUBMIT REVIEW"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="#4CAF50"
        android:padding="0dp"
        android:elevation="4dp" />

</LinearLayout>